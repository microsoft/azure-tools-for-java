<idea-plugin>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>com.intellij.modules.xml</depends>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <action
                class="com.microsoft.azure.toolkit.intellij.azure.sdk.experiment.ExperimentalFeature"
                id="AzSdkHelpAction"
                text="Ask Azure SDK Help">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                language="XML"
                shortName="MavenProjectInspection"
                displayName="Check Maven Project"
                groupName="Maven"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.MavenProjectInspection">
            <class>com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.MavenProjectInspection</class>
        </localInspection>

        <localInspection
                language="JAVA"
                shortName="StorageUploadWithoutLengthCheck"
                displayName="Storage Upload Without Length Check"
                groupName="Azure SDK Rules"
                enabledByDefault="true"
                level="INFO"

                implementationClass="com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.StorageUploadWithoutLengthCheck">
            <class>
                com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.StorageUploadWithoutLengthCheck
            </class>
        </localInspection>

        <localInspection
                language="JAVA"
                shortName="ServiceBusReceiverAsyncClientCheck"
                displayName="Low level ServiceBusReceiverAsyncClient check"
                groupName="Azure SDK Rules"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.ServiceBusReceiverAsyncClientCheck">

            <class>
                com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.ServiceBusReceiverAsyncClientCheck
            </class>
        </localInspection>

        <localInspection
                language="JAVA"
                shortName="DisableAutoCompleteCheck"
                displayName="Disable Auto-Complete Check"
                groupName="Azure SDK Rules"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.DisableAutoCompleteCheck">

            <class>
                com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.DisableAutoCompleteCheck
            </class>
        </localInspection>

        <localInspection
                language="JAVA"
                shortName="DynamicClientCreationCheck"
                displayName="Dynamic Client Creation Check"
                groupName="Azure SDK Rules"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.DynamicClientCreationCheck">

            <class>
                com.microsoft.azure.toolkit.intellij.azure.sdk.buildtool.DynamicClientCreationCheck
            </class>
        </localInspection>
    </extensions>
</idea-plugin>
